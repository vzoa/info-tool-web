            <h1 class="text-2xl">Real World Routes</h1>
            <p>View on <a target="_blank" href="@FlightAware.MakeUrl(_routeForm.DepartureId, _routeForm.ArrivalId)"
                          class="underline">FlightAware</a>.</p>
        </div>
